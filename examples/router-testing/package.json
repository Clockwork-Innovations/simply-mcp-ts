{
  "name": "router-testing-example",
  "version": "1.0.0",
  "description": "Router testing and development mode example using simply-mcp",
  "type": "module",
  "scripts": {
    "start": "npx tsx server.ts",
    "start:testing": "FLATTEN_ROUTERS=true npx tsx server.ts",
    "start:http": "npx tsx server.ts --http --port 3000",
    "start:http:testing": "FLATTEN_ROUTERS=true npx tsx server.ts --http --port 3000"
  },
  "keywords": [
    "mcp",
    "router",
    "testing",
    "example"
  ],
  "dependencies": {
    "simply-mcp": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsx": "^4.7.1"
  }
}
