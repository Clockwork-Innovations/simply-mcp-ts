```typescript
import type { IServer, IApiKeyAuth } from 'simply-mcp';

interface MyAuth extends IApiKeyAuth {
  type: 'apiKey';
  keys: [
    { name: 'admin', key: 'sk-xxx', permissions: ['*'] },
